<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Default zoom level when centering on current position. -->
    <integer name="zoom_default">10</integer>
    <integer name="zoom_places_search">12</integer>
    <integer name="zoom_station_select">16</integer>

    <!-- Preferred is the ideal interval for position updates. -->
    <!-- Fastest is the fastest the app can handle.-->
    <!-- Both in milliseconds. -->
    <integer name="preferred_location_interval">10000</integer>
    <integer name="fastest_location_interval">5000</integer>

    <!-- Size of icons in map. -->
    <integer name="car_icon_add_to_size">20</integer>
    <integer name="station_icon_add_to_size">0</integer>

    <!-- Triggers for calling the AsyncTask to sync with OpenChargeMap.io. -->
    <!-- In meters. -->
    <integer name="delta_trigger_camera_significantly_changed_low_zoom">2500</integer>
    <integer name="delta_trigger_camera_significantly_changed_high_zoom">10000</integer>
    <!-- zoom level. -->
    <integer name="trigger_zoom_level">8</integer>
    <integer name="trigger_high_zoom">12</integer>
    <!-- OpenChargeMap values -->
    <integer name="ocm_radius_km">5</integer>
    <integer name="ocm_max_results">500</integer>



</resources>